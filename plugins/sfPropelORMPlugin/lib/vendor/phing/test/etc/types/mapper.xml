<?xml version="1.0"?>

<project name="copy-test" basedir="." default="test1">

  <target name="test1">
    <mkdir dir="copytest" />
    <copy todir="copytest">
      <fileset dir="../../../classes">
        <include name="**/tasks/system/*.php" />
      </fileset>
